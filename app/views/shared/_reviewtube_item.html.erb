<div class="col-lg-3 col-md-6 col-sm-6 col-xs-12" style="background-image: url('<%= reviewtube.thumbnail %>'); height: 325px; background-position: center, center; z-index: 1; background-size: cover; background-repeat: none;">
  <div class="description-bar">
    <h5><%= reviewtube.title %></h5>
    <h6><%= reviewtube.vertical&.title %></h6>
    <% if user_signed_in? %>
      <% if Favorite.find_by(favorited: reviewtube, user: current_user) %>
        <%= link_to destroy_favorite_path(media_item: :reviewtube, id: reviewtube.id),class: "pull-right heart", method: :delete do %>
          <%= fa_icon "heart" %>
        <% end %>
      <% else %>
        <%= link_to create_favorite_path(media_item: :reviewtube, id: reviewtube.id), class: "pull-right heart", method: :post do %>
          <%= fa_icon "heart-o" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <%= link_to image_tag("play.png", :class => "center-block, play-button"), "#reviewtube_#{reviewtube.id}_modal",  id: "reviewtube_#{reviewtube.id}_button", :data => { :toggle =>"modal" } %>
</div>

<%= render partial: "shared/reviewtube_modal", locals: { reviewtube: reviewtube } %>